@page "/pagos/resultado"
@inject NavigationManager Nav

<h3>Resultado del Pago</h3>

<p>URL completa: @Nav.Uri</p>

@if (Nav.Uri.Contains("success", StringComparison.OrdinalIgnoreCase))
{
    <p style="color:green">✅ Pago aprobado</p>
}
else if (Nav.Uri.Contains("error", StringComparison.OrdinalIgnoreCase)
      || Nav.Uri.Contains("fail", StringComparison.OrdinalIgnoreCase))
{
    <p style="color:red">❌ Pago rechazado o con error</p>
}
else
{
    <p>Procesando resultado…</p>
}
